<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eef0ec"
    tools:context="com.example.asus.jump2.MainActivity"
    android:weightSum="1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一个界面" />

    <Button
        android:id="@+id/btn_startSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试按钮" />

    <EditText
        android:id="@+id/text_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="在这里输入参数" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_startThirdWithParam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点这里传参数跳转到第三个界面" />
</LinearLayout>
